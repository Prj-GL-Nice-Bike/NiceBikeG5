<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NiceBikeG5.PM_ListOrders"
             Title=""
             BackgroundColor="Darkgray">


    <VerticalStackLayout>

        <ListView x:Name="listView" Margin="50,35,50,50" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Button 
                            Text="{Binding}"
                            BackgroundColor="DarkRed"
                            TextColor="Black"
                            FontFamily="Raleway-Light"
                            FontSize="75"            
                            FontAttributes="Bold"            
                            BorderColor="Black"
                            BorderWidth="10"
                            CornerRadius="0"
                            HeightRequest="120"
                            WidthRequest="600"
                            Margin="0,15,0,15"
                            Clicked="OnButtonClicked"/>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>